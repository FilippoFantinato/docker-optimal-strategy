MODULE controller(u1,u2)
VAR
  c1 : boolean;
  c2 : boolean;
ASSIGN
  init(c1) := FALSE;
  init(c2) := FALSE;
  next(c1) := !c1;
  next(c2) := !c2;

LTLSPEC  (u1 -> F[0,1](c1)) & (u2 -> (F[0,3] (c2)))

VAR       time: 0..3;
FROZENVAR maxtime: 0..3;
ASSIGN
  init(time) := 0;
  next(time) := case time < 3 : time + 1; TRUE: time; esac;
  PARSYNTH r := { maxtime | VALID  ((u1 -> F[0,1](c1 & time<=maxtime)) & (u2 -> F[0,3](c2 &time<=maxtime)))};
