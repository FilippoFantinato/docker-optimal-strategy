MODULE controller(u)
VAR
  c1 : boolean;
  c2 : boolean;
ASSIGN
  init(c1) := TRUE;
  next(c1) := TRUE;
  init(c2) := TRUE;
  next(c2) := TRUE;

LTLSPEC  (X u) U (X X X(c1 U c2))

VAR       time: 0..7;
FROZENVAR maxtime: 0..7;
ASSIGN
  init(time) := 0;
  next(time) := case time < 7 : time + 1; TRUE: time; esac;
  PARSYNTH r := { maxtime | VALID  ((X u) U (X X X(c1 U (c2 & time<=maxtime))))};
