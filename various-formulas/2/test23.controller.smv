MODULE controller(u)
VAR
  c : boolean;
ASSIGN
  init(c) := TRUE;
  next(c) := TRUE;

LTLSPEC  F( (X c) & ((X u) | (c | X c)) )

VAR       time: 0..3;
FROZENVAR maxtime: 0..3;
ASSIGN
  init(time) := 0;
  next(time) := case time < 3 : time + 1; TRUE: time; esac;
  PARSYNTH r := { maxtime | VALID  F((X (c & time<=maxtime)) & ((X (u & time<=maxtime)) | ((c & time<=maxtime) | X (c & time<=maxtime))))};
