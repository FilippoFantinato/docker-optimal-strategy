MODULE controller(u)
VAR
  c : boolean;
ASSIGN
  init(c) := FALSE;
  next(c) := TRUE;


LTLSPEC  c | (u & X (c | (u & X c)))

VAR       time: 0..3;
FROZENVAR maxtime: 0..3;
ASSIGN
  init(time) := 0;
  next(time) := case time < 3 : time + 1; TRUE: time; esac;
  PARSYNTH r := { maxtime | VALID  ((c & time<=maxtime) | (u & X ((c & time<=maxtime) | (u & X (c & time<=maxtime)))))};
