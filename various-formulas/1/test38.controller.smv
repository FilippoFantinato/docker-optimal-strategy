MODULE controller()
VAR
  c1 : boolean;
  c2 : boolean;
  c3 : boolean;
  c4 : boolean;
ASSIGN
  init(c1) := TRUE;
  init(c2) := TRUE;
  init(c3) := TRUE;
  init(c4) := TRUE;
  next(c1) := TRUE;
  next(c2) := TRUE;
  next(c3) := TRUE;
  next(c4) := TRUE;


LTLSPEC  c1 | c2 | c3 | c4

VAR       time: 0..3;
FROZENVAR maxtime: 0..3;
ASSIGN
  init(time) := 0;
  next(time) := case time < 3 : time + 1; TRUE: time; esac;
  PARSYNTH r := { maxtime | VALID  (c1 | c2 | c3 | c4) & time<=maxtime};
