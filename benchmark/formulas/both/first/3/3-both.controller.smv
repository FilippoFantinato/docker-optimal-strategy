MODULE controller(u0,u1,u2)
VAR
	c0 : boolean;
	c1 : boolean;
	c2 : boolean;
ASSIGN
	c0 := u0;
	c1 := u1;
	c2 := u2;
LTLSPEC F[0,6](c0 <-> u0) & X(F[0,6](c1 <-> u1)) & X X(F[0,6](c2 <-> u2))
VAR       time: 0..21;
FROZENVAR maxtime: 0..21;
ASSIGN
  init(time) := 0;
  next(time) := case time < 21 : time + 1; TRUE: time; esac;
PARSYNTH r := { maxtime | VALID  F[0,6]((c0 <-> u0) & time <= maxtime) & X(F[0,6]((c1 <-> u1) & time <= maxtime)) & X X(F[0,6]((c2 <-> u2) & time <= maxtime))};
