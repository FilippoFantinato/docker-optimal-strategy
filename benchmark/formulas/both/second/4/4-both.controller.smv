MODULE controller(u0,u1,u2,u3)
VAR
	c : boolean;
	steps: 0..3
ASSIGN
	c := case
		steps=0 : u0;
		steps=1 : u1;
		steps=2 : u2;
		steps=3 : u3;
		else : c;
	esac;
	init(steps) := 0;
	next(steps) := case steps < 3 : steps + 1; else : steps; esac;
LTLSPEC G[0,3](F[0,3](c <-> u0)) & X(G[0,3](F[0,6](c <-> u1))) & X X(G[0,3](F[0,6](c <-> u2))) & X X X(G[0,3](F[0,6](c <-> u3)))
