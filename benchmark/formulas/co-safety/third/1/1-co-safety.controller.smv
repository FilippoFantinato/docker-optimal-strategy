MODULE controller(u0, u1)
VAR
	c : boolean;
ASSIGN
	init(c) := TRUE;
	next(c) := !c;
LTLSPEC F(c <-> u0) & X F(!c <-> u1)
VAR       time: 0..7;
FROZENVAR maxtime: 0..7;
ASSIGN
  init(time) := 0;
  next(time) := case time < 7 : time + 1; TRUE: time; esac;
PARSYNTH r := { maxtime | VALID  F((c <-> u0) & time<=maxtime) & X F((!c <-> u1) & time<=maxtime)};
